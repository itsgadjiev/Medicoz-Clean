@using Medicoz.Application.Features.Departments.Queries.GetAllDepartments
@using Medicoz.Domain
@{
    int counter = 1;
}
@model List<DoctorAppointment>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Detail </th>
                                <th>Date </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(counter++)</td>
                                    <td>@item.PasentName</td>
                                    <td>@item.PasentPhone</td>
                                    <td>@item.PasentEmail</td>
                                    <td>@item.PasentNotes</td>
                                    <td>@item.ReservationDate</td>

                                </tr>
                            }
                        </tbody>
                    </table><!--end /table-->
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div> <!-- end row -->