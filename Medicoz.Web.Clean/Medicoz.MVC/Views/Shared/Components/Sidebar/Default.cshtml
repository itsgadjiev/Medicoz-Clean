@using Medicoz.Application.Features.Products.Queries.GetAllProducts
@model List<ProductListDTO>
<div class="sidebar-side col-lg-4 col-md-12 col-sm-12">
    <aside class="sidebar">
        <!--search box-->
        <div class="sidebar-widget search-box">
            <form method="post" asp-action="index" asp-controller="shop">
                <div class="form-group">
                    <input type="search" name="search" placeholder="Search....." required="">
                    <button type="submit"><span class="icon fa fa-search"></span></button>
                </div>
            </form>
        </div>

        <!-- Latest News -->
        <div class="sidebar-widget latest-news">
            <div class="sidebar-title"><h3>Newest Products</h3></div>
            <div class="widget-content">
                @foreach (var item in Model)
                {
                    <article class="post">
                        <div class="post-thumb"><a asp-action="detail" asp-route-id="@item.Id" asp-controller="shop"><img src="~/uploads/images/@item.ImageUrl" alt=""></a></div>
                        <h5>
                            <a asp-action="detail" asp-route-id="@item.Id" asp-controller="shop">@item.Name</a>
                        </h5>
                        <div class="price">$@item.Price</div>
                    </article>
                }

            </div>
        </div>

    </aside>
</div>