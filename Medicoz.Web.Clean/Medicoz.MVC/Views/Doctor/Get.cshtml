@using Medicoz.Application.ViewModels.Areas.Admin
@model List<DoctorListVMForAP>
<!--Page Title-->
<section class="page-title" style="background-image: url(images/background/8.jpg);">
    <div class="auto-container">
        <div class="title-outer">
            <h1>Dedicated Doctors</h1>
            <ul class="page-breadcrumb">
                <li><a href="index-2.html">Home</a></li>
                <li>Doctors</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- Team Section Two -->
<section class="team-section-two alternate alternate2">
    <div class="auto-container">
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="team-block-two col-lg-4 col-md-6 col-sm-12 wow fadeInUp">
                    <div class="inner-box">
                        <div class="image-box">
                            <figure class="image"><a asp-action="detail" asp-controller="doctor" asp-route-doctorId="@item.Id"><img src="~/uploads/images/@item.ImageUrl" alt=""></a></figure>
                            <ul class="social-links">
                                <li><a href="#"><span class="fab fa-facebook-f"></span></a></li>
                                <li><a href="#"><span class="fab fa-twitter"></span></a></li>
                                <li><a href="#"><span class="fab fa-instagram"></span></a></li>
                                <li><a href="#"><span class="fab fa-linkedin-in"></span></a></li>
                            </ul>
                        </div>
                        <div class="info-box">
                            <h5 class="name"><a asp-action="detail" asp-controller="doctor" asp-route-doctorId="@item.Id">@item.Name @item.Surname</a></h5>
                            @foreach (var item2 in item.Departments)
                            {
                                <span class="designation">@item2.Name["en-US"]</span>
                            }
                        </div>
                    </div>
                </div>

            }
            <!-- Team Block -->


        </div>

    </div>
</section>
<!--End Team Section -->
