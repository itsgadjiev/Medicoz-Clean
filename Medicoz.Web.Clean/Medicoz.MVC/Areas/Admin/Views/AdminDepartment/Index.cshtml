@using Medicoz.Application.Features.Departments.Queries.GetAllDepartments
@using Medicoz.Domain
@{
    int counter = 1;
}
@model List<DepartmentListDTO>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Icon</th>
                                <th>Name</th>
                                <th>Detail </th>
                                <th>Image </th>
                                <th class="text-end">
                                    Action
                                    <a class="btn btn-success" asp-action="create" asp-controller="AdminDepartment">Create</a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(counter++)</td>
                                    <td>@Html.Raw(item.Icon)</td>
                                    <td>@item.Name</td>
                                    <td>@item.Detail</td>
                                    <td>
                                        <img src="~/uploads/images/@item.ImageURL" style="width:150px; height:100px;"  />
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="update" asp-controller="AdminDepartment" asp-route-id="@item.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                        <a asp-action="delete" asp-controller="AdminDepartment" asp-route-id="@item.Id"><i class="las la-trash-alt text-secondary font-16"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table><!--end /table-->
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div> <!-- end row -->