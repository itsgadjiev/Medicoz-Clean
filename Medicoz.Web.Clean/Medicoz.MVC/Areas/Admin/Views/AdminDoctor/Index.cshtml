@using Medicoz.Application.Contracts.Localisation
@using Medicoz.Application.ViewModels.Areas.Admin
@using Medicoz.Domain
@using Medicoz.MVC.Areas.Admin.ViewModels;
@model List<DoctorListVMForAP>
@{
    int counter = 1;
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Fee </th>
                                <th>Title </th>
                                <th class="text-end">
                                    <a class="btn btn-success" asp-action="create" asp-controller="AdminDoctor">Create</a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(counter++)</td>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Fee</td>
                                    <td>@item.Title</td>
                                    <td class="text-end">
                                        <a asp-action="update" asp-controller="AdminDoctor" asp-route-id="@item.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                        <a asp-action="delete" asp-controller="AdminDoctor" asp-route-id="@item.Id"><i class="las la-trash-alt text-secondary font-16"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table><!--end /table-->
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div> <!-- end row -->
